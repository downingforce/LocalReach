<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="downingforce.localreach.ui.LandingScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/textView"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Welcome to LocalReach"
        android:ems="10"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/intro" />

    <Button
        android:text="Find Charities near you"
        android:textSize="20sp"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:layout_below="@+id/body2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/searchButton" />

    <Button
        android:text="Contact us"
        android:textSize="20sp"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:id="@+id/emailButton"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Explore the organizations doing work in your cities and neighborhoods"
        android:id="@+id/body1"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_below="@+id/intro"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Search, Read, Learn, and Support!"
        android:id="@+id/body2"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/body1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
